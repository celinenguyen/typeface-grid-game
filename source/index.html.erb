<h1>Typeface Grid Game</h1>

<div id="grid">
	<!-- stationary factoid squares -->
	<% data.factoids.each do |item| %>
		<div class="factoid" id="<%= item.id %>">
			<h3><%= item.name %></h3>
			<p><%= item.fact %></p>
		</div>
 	<% end %>
	<!-- movable character squares -->
	<div class="character" id="one">
		<div id="lowercase-a">a</div>
	</div>
  <div class="character" id="two">
  	<div id="number-2">2</div>
  </div>
  <div class="character" id="three">
  	<div id="symbol-ampersand">&amp;</div>
  </div>
  <div class="character" id="four">
  	<div id="lowercase-h">h</div>
  </div>
  <div class="character" id="five">
  	<div id="uppercase-n">N</div>
  </div>
  <div class="character" id="six">
  	<div id="symbol-leftbrace">{</div>
  </div>
  <div class="character" id="seven">
  	<div id="uppercase-r">R</div>
  </div>
  <div class="character" id="eight">
  	<div id="lowercase-y">y</div>
  </div>
</div><!-- #grid -->

<script type="text/javascript">
	$(document).ready(function() {

		var square_size = 250;
		var grid_size = square_size * 3;
		var empty_top = square_size;
		var empty_left = square_size;

		function check_adjacency(et, el, tt, tl) {
			et = parseInt(et);
			el = parseInt(el);
			tt = parseInt(tt);
			tl = parseInt(tl);
			// same row and adjacent column
			if ((et === tt) && (el + square_size === tl || el - square_size === tl)) {
				return true;
			}
			// same column and adjacent row;
			if ((el === tl) && (et + square_size === tt || et - square_size === tt)) {
				return true;
			}
			else return false;
		}

    $(".character").click(function(event) {
    	// store location
      var temp_top = $(this).css("top");
      console.log("stored top = " + empty_top + ", top = " + temp_top);
      console.log("empty_top and temp_top: " + (empty_top === temp_top));
      var temp_left = $(this).css("left");
      console.log("stored left = " + empty_left + ", left = " + temp_left);
      console.log("empty_left and temp_left: " + (empty_left === temp_left));
      if (check_adjacency(empty_top, empty_left, temp_top, temp_left)) {
      	// move item
	      $(this).css("top", empty_top);
	      $(this).css("left", empty_left);
	      // reassign empty space
	      empty_top = temp_top;
	      empty_left = temp_left;
      }
      else {
      	console.log("nope");
      }
    });

	});
</script>